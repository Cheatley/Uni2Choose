<br><br><br><br><br><br><br>
<p>Make your selections</p>

<%= form_for(advanced_search_path, :method => "get") do |y| %>

  <%= y.label :standard_grades, "Do you have standard grades?" %><br>
    <%= y.label :yes %><br>
      <%= y.radio_button :standard_grades, true, class: 'form-control' %>
    <%= y.label :no %><br>
      <%= y.radio_button :standard_grades, false, onClick: "alert('You will need to do a summer school to be able to apply to those degree programs!');", 
      class: 'form-control' %>
  
  
  <%= y.label :grades, "How many A's do you expect?" %>
  <%= y.select "grades", options_for_select(["0", "1", "2", "3", "4"], @choice) %>
  
  <%= y.label :interets, "What are you interested in?" %>
  <%= y.select "interests", options_for_select(["business", "sciences", "languages"], @interests) %>
  
<%= y.submit "submit" %>
<% end %></br>

<% if @data != nil %>
<p><%= @data.count %> results</p>
<% end %>

<% if @data != nil %>
  <table border="1" class="table">
    <thead>
      <tr>
        <th>Course title</th>
        <th>Department</th>
        <th>Ucas code</th>
        <th>Highers required</th>
        <th>Degree type</th>
      </tr>
    </thead>
    <tbody>
      <% @data.each do |course| %>
      <tr>
        <td><%= course.course_title %></td>
        <td><%= course.departments %></td>
        <td><%= course.ucas_code %></td>
        <td><%= course.highers %></td>
        <td><%= course.degree_type %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

