<!--Functionality of recommender?? --> 
<% provide(:title, '') %>

<!--containers for design/layout --> 
<div class = "contenty">
  <div class = "row">
    <!--Page information --> 
  <div class="col-s-4 col-s-4";>
    <%= search_form_for @adsearch, url: adsearch_path, method: :get do |f| %>
    
      <%= label_tag :uregion, "Refine by region:" %><br>
      <%= select_tag :uregion, options_for_select(["Northern", "Central belt", "South from Dundee"]), prompt: "Select Region"  %>

      <%= label_tag :discipline, "Refine by discipline:" %><br>
      <%= select_tag :discipline, options_for_select(["Medicine and Dentistry", "Subjects allied to Medicine", "Biological Sciences",
        "Veterinary Sciences, Agriculture and Related Subjects", "Physical Sciences", "Mathematical Sciences", "Engineering", 
        "Computer Sciences", "Technologies", "Architecture, Building and Planning", "Social Studies", "Law", 
        "Business and Administrative Studies", "Mass Communication and Documentation", "Linguistics, Classics and Related Subjects",
        "European Languages, Literature and Related Subjects", 
        "Eastern, Asiatic, African, American and Australasian Languages, Literature and Related Subjects", 
        "Historical and Philosophical Studies", "Creative Arts and Design", "Education"]), prompt: "Select Discipline" %>
    
      <%= f.condition_fields do |c| %>
        <%= render "condition_fields", f: c %>
      <% end %>
      <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
    
      <div class="actions"><%= f.submit "Search" %></div>
    <% end %>
  </div>
  
  <div class="col-s-8 col-s-8";>

      <% if @data != nil %>
      <p><%= @data.count %> results</p>
      <% end %>


      <% if @data != nil %>
        <table border="1" class="table">
          <thead>
            <tr>
              <th>University Name</th>
              <th>Course Name</th>
              <th>Ucas Code</th>
              <th>Duration</th>
              <th>Qualification</th>
              <th>Entry Requirements</th>
              <th>Share</th>
            </tr>
          </thead>
          <tbody>
            <% @data.each do |degree| %>
            <tr>
              <td><%= degree.uname %></td>
              <td><%= degree.cname %></td>
              <td><%= degree.ucas %></td>
              <td><%= degree.duration %></td>
              <td><%= degree.qualification %></td>
              <td><%= degree.entry %></td>
              <td><%= render "share_by_email"%></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
