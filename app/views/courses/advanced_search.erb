<div class = "signinstyle">
  <div class = "row">
    
<p>#####Redirected on this page after going through the recommender system on the homepage, advanced search not available in navigation.#####</p>

<%= form_tag(advanced_search_path, :method => "get") do %>
      
  <div class="field">
    <%= label_tag :uregion, "Any preferences considering the location of your study place?" %><br>
    <%= select_tag :uregion, options_from_collection_for_select(University.all.to_a.uniq{ |o| o.uregion}, :id, :uregion)  %>
  </div>
  
<%= submit_tag "submit" %>
<% end %></br>

<!-- 
Following code has to be changed to show all courses available for the subject chosen in the recommender search, 
and updates when/if a location is chosen.
See courses_controller.rb 
-->

<% if @data != nil %>
<p><%= @data.count %> results</p>
<% end %>


<% if @data != nil %>
  <table border="1" class="table">
    <thead>
      <tr>
        <th>Course title</th>
        <th>Department</th>
        <th>Ucas code</th>
        <th>Highers required</th>
        <th>Degree type</th>
      </tr>
    </thead>
    <tbody>
      <% @data.each do |course| %>
      <tr>
        <td><%= course.course_title %></td>
        <td><%= course.departments %></td>
        <td><%= course.ucas_code %></td>
        <td><%= course.highers %></td>
        <td><%= course.degree_type %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

</div>
</div>