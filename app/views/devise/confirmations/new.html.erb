<!-- Resend account activation email page -->
<% provide(:title, "Account Activation") %>

<!-- breadcrumbs -->
<br>
<a href="/">Home</a> / <%= link_to "Login", new_session_path(resource_name) %> / Resend Activation Email

  <div class = "row">
    <%= link_to "Back", :back %>
    <h1>Resend account activation instructions</h1>
    <%= image_tag "line.png" , :alt => "logo"%>    

    
    </div>
    
    <div class ="row">
    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>
    
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Resend account activation instructions" %>
        <br>
        <br>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
