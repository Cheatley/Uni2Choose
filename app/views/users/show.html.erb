<!--Profile Page Title --> 
<% provide(:title, "My Profile") %>

<!--Breadcrumbs --> 
<div class = "row">
    <%= link_to "Back", :back %>
</div>

<!--Page information --> 
<div class= "row">
    
    <!--Welcoming User -->
    <h2>Hi <%= @user.name %></h2>
    <%= image_tag "line.png" , :alt => "logo"%>
    
</div>

<div class= "row">
  
  <div class="gravatar_pro">
        <%= gravatar_for @user %>
  </div>
  
  <div class="row">
    <div class="col-s-6 col-s-6";>
        <h2><%= link_to "Edit my Account Details",  edit_user_registration_path(current_user) %><h2>   </h2>
    </div>
    <div class="col-s-6 col-s-6";>
          <h2><%= link_to "My Saved Searches", save_search_path %></h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-s-6 col-s-6";>
        <!--limits below to Admin-->
        <% if current_user.admin? %>
        <h2><%= link_to "User Analysis", analysis_path %></h2>
    </div>
    <div class="col-s-6 col-s-6";>
        <h2><%= link_to "Admin Dashboard", rails_admin_path %></h2>
        <% end %>
    </div>
   
  </div>
 
